{
    "workbench.colorTheme": "Vim Dark Hard",
    "vim.smartRelativeLine": true,
    "vim.insertModeKeyBindingsNonRecursive":[ 
        {
          "before": ["<C-h>"],
          "after": ["<C-w>", "h"]
        },
        {
          "before": ["<C-j>"],
          "after": ["<C-w>", "j"]
        },
        {
          "before": ["<C-k>"],
          "after": ["<C-w>", "k"]
        },
        {
          "before": ["<C-l>"],
          "after": ["<C-w>", "l"]
        },
     
        {
          "before": ["J"],
          "after": ["5", "j"]
        },
        {
          "before": ["K"],
          "after": ["5", "k"]
        }, 
        {
          "before": ["k", "j"],
          "after": ["<ESC>"]
        }
      ],
    "git.autofetch": true,
    "editor.lineNumbers": "relative"
}